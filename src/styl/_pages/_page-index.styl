.sect__promo
	padding-bottom 260px
	
.promo-block
	padding-right 136px
	position relative
	text-align right
	padding  164px 0
	
.promo-img
	position absolute
	z-index -1
	width 670px
	left 215px
	top 96px
	
.promo-round
	position absolute
	bottom 0
	left 0
	width 230px
	height 230px
	img
		position absolute
		position-center()
		width 100%
		height 100%
		display block
		animation rotate 15s linear infinite
	svg
		svg()
		width 23px
		height 71px
		fill black
		position absolute
		position-center()
	

@keyframes rotate
	from
		transform translate(-50%, -50%) rotate(0)
	to
		transform translate(-50%, -50%) rotate(360deg)

.title
	display inline-block
	width fit-content
	font 96px $Bold
	line-height 1
	span, i
		font 128px $Italic
		line-height 0.8
		text-transform none
	
		

.text-meaning
	padding-top 130px
	position relative
	&:before
		pseudo()
		z-index -3
		position absolute
		background url('../img/ua.svg') 50% no-repeat / contain
		width 1258px
		height 1148px
		right 0
		top -300px
		pointer-events none
	&__entering
		margin-bottom 68px
		svg
			svg()
			fill black
			width 297px
			height 24px
	&__title
		flex 1
		width 100%
		font 32px $Bold
		max-width 760px
		margin-right 140px
	&__block
		font 24px $MMed
		line-height 32px
		i
			font-family inherit

//Thesis
.sect__thesis
	padding-bottom 250px		
.thesis
	position relative
	max-width 1400px
	font 40px $Bold
	line-height auto
	i
		position relative
		display inline-block
		&:before
			pseudo()
			position absolute
			height 60%
			right -7px
			background-color $accent-color
			bottom 0
			z-index -1
			left -5px
	p
		max-width 1150px
		position relative	
		z-index 1
		
	&-img
		position absolute
		z-index -1
		width 400px
		top 0
		right 0
		img
			display block
		

// prices
.sect__prices
	padding-bottom 130px
.prices
	margin-bottom -75px
	position relative
	margin-left -30px
	margin-right -30px
	&:before
		pseudo()
		position absolute
		position-center()
		width 350px
		height 350px
		background url('../img/decor/blue-star.svg') 50% no-repeat / contain
		z-index -1
.price-block
	width 33.3333%
	padding-left 30px
	padding-right 30px
	margin-bottom 75px
	display grid
	justify-content center
	&__title
		font 32px $Black
		line-height 1
		margin-bottom 20px
		i, span
			text-transform none
	&__description
		font-size 32px
		line-height 39px
		margin-bottom 20px
	&__value
		font 24px $Black
		white-space nowrap
		

// Advantages
.sect__advantages
	padding-bottom 250px
	
.advantages
	margin-bottom -150px
	margin-left -50px
	margin-right -50px
	&-wrapper
		position relative
	&-img
		position absolute
		z-index -1
		horisontal-center()
		top -90px
		width 500px
		

.advantage
	font-size 24px
	width 50%
	flex 1 0 33.3333%
	padding-left 50px
	padding-right 50px
	margin-bottom 150px
	&:nth-child(5),
	&:nth-child(6)
	div
		width fit-content
		margin 0 auto
	&-title
		font 36px $Bold
		line-height 1
		margin-bottom 10px
		

// Aboyt
.sect__about
	padding-bottom 120px
	.sect-title
		position relative
		z-index 2
	
.about
	padding-left 130px
	margin-top -50px
	&-author
		width 380px
		flex none
		font 36px $Reg
		position relative
		z-index 1
		&:before
			pseudo()
			position absolute
			top -140px
			right 70px
			width 175px
			height 260px
			background url('../img/decor/yellow-star.svg') 50% no-repeat / contain
			z-index -1
	&-img
		width 395px
		margin-right 20px
		flex none
	&-text
		font-size 20px
		line-height 24px
		
// partners
.sect__partners
	padding-bottom 120px
	
// Consultation
.sect__consultation
	padding-bottom 110px
	
.consultation
	
	&-entering
		position relative
		z-index 2
		
		.block-text
			flex 1
			max-width 810px
			margin-right 30px

	
	&-img
		flex none
		width 470px
		
	&-content
		padding-left 17%
		margin-top -65px
		
		.block-text
			position relative
			z-index 1
			margin-left -100px
			
// Condition
.sect__condition
	padding-bottom 160px
	
.condition
	&-img
		flex 1
		width 100%
		max-width 640px
		
	.block-text
		flex 1
		width 100%
		max-width 845px
		margin-right 30px
		position relative
		z-index 1
		


