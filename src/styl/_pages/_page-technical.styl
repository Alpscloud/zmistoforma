.sect__technical
	min-height 100vh
	padding 150px 0
	display flex
	align-items center
	margin-top -87px
	
.block-404
	position relative
	padding-left 200px
	margin-right 0
	margin-left auto
	max-width 1240px
	padding-right 140px
	&:before
		pseudo()
		position absolute
		left 0
		top -150px
		width 290px
		height 290px
		background url('../img/decor/flower.svg') 50% no-repeat / contain
		z-index -1
		
	&__img
		width 508px
		height 294px
		position absolute
		z-index -1
		top -25px
		right 140px
		img
			display block
			width 100%
			height 100%
			object-fit cover
			
	&__title
		line-height 42%
		font 199px $Black
		
	&__subtitle
		font 48px $Reg
		line-height 1
		margin-bottom 20px
		i
			font-family inherit
		span
			display block
			font-size 0.42em
			line-height 2
			
	p
		max-width 225px
		line-height 21px
		margin-right 60px
		

.homepage-link
	white-space nowrap
	color $text-color
	font 36px $Black
	line-height 1
	flex none
	&:hover
		color $accent-color
	&__wrapper
		flex 1
		
		svg
			svg()
			flex 1
			width 100%
			max-width 170px
			fill black
			margin-right 50px