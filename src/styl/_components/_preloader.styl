// Loader
.preloader 
	height 32px
	width 32px
	animation loader-5-1 2s cubic-bezier(0.770, 0.000, 0.175, 1.000) infinite
	position absolute
	margin-top -16px
	margin-left -16px
	left 50%
	top 50%
	z-index 1001
	&:before
		pseudo()
		position absolute
		top 0 
		left 0
		bottom 0 
		right auto
		margin auto
		width 8px
		height 8px
		background black
		border-radius 50%
		animation loader-5-2 2s cubic-bezier(0.770, 0.000, 0.175, 1.000) infinite
	&:after
		pseudo()
		position absolute
		top 0 
		left auto
		bottom 0
		right 0
		margin auto
		width 8px
		height 8px
		background black
		border-radius 50%
		animation: loader-5-3 2s cubic-bezier(0.770, 0.000, 0.175, 1.000) infinite
		
	span
		display block
		position absolute
		top 0 
		left 0
		bottom 0
		right 0
		margin auto
		height 32px
		width 32px
		&:before
			pseudo()
			position absolute
			top 0 
			left 0
			bottom auto 
			right 0
			margin auto
			width 8px
			height 8px
			background black
			border-radius 50%
			animation loader-5-4 2s cubic-bezier(0.770, 0.000, 0.175, 1.000) infinite
		&:after
			pseudo()
			position absolute
			top auto 
			left 0
			bottom 0 
			right 0
			margin auto
			width 8px
			height 8px
			background black
			border-radius 50%
			animation loader-5-5 2s cubic-bezier(0.770, 0.000, 0.175, 1.000) infinite

@keyframes loader-5-1 
	0%
		transform rotate(0deg)
	100%
		transform rotate(360deg)


@keyframes loader-5-2 
	0%
		transform translate3d(0, 0, 0) scale(1)
	50%
		transform translate3d(24px, 0, 0) scale(.5)
	100%
		transform translate3d(0, 0, 0) scale(1)

@keyframes loader-5-3 
	0%
		transform translate3d(0, 0, 0) scale(1) 
	50%
		transform translate3d(-24px, 0, 0) scale(.5) 
	100%
		transform translate3d(0, 0, 0) scale(1) 

@keyframes loader-5-4 
	0%
		transform translate3d(0, 0, 0) scale(1) 
	50%
		transform translate3d(0, 24px, 0) scale(.5) 
	100%
		transform translate3d(0, 0, 0) scale(1) 


@keyframes loader-5-5 
	0%
		transform translate3d(0, 0, 0) scale(1) 
	50%
		transform translate3d(0, -24px, 0) scale(.5) 
	100%
		transform translate3d(0, 0, 0) scale(1) 

.preloader
	
		
	&__wrapper
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		z-index 1000
	&__section
		position fixed
		top 0
		width 51%
		height 100%
		background-color $body-bg 
		z-index 1000
		transform translateX(0)
		&--left
			left 0
		&--right
			right 0


			
@keyframes rotating
	100%
		transform rotateY(360deg)
	

.is-loaded

	.preloader
		opacity 0
		transition all 0.3s ease-out
		&__wrapper
			visibility hidden
			transition all 0.3s 1s ease-out
		&__section
			&--left
				transform translateY(-100%)
				transition all 0.7s 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000)
			&--right
				transform translateY(100%)
				transition all 0.7s 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000)