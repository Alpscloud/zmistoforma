.footer
	padding-bottom 110px
	
.copyright
	font-size 12px
	line-height 1
	&__row
		margin-top 60px
		
.developer
	display inline-block
	line-height 1
	font-size 15px
	color $text-color
	b, strong, span
		font-family $Black
	&:hover
		color $accent-color
		
// Brief
.sect__brief
	padding-bottom 110px
	
.brief
	position relative
	z-index 1
	&-text
		width fit-content
		min-height 540px
		position relative
		display flex
		align-items center
		.sect-title
			margin-bottom 40px
	&-img
		width 515px
		height 540px
		position absolute
		right 0
		bottom 0
		z-index -1
		img
			width 100%
			height 100%
			object-fit cover
			
	&-link
		font 48px $MBold
		a
			font-family $Italic
			color inherit
			text-transform none
			display inline-block
			position relative
			&:before
				pseudo()
				position absolute
				left 0
				width 100%
				height 5px
				background-color $accent-color
				bottom 10px
				transition width .3s ease-in-out
			&:hover
				&:before
					width 0
			

.sect__dialog
	.sect-title
		margin-bottom 40px

.dialog
	position relative
	padding-top 145px
	&-row
		margin-bottom 130px
		max-width 1140px
		&:last-child
			margin-bottom 0
	&-img
		width 350px
		height 415px
		position absolute
		top 0
		left 340px
		z-index -1
		img
			width 100%
			height 100%
			object-fit cover
		&:before
			pseudo()
			width 200px
			height 200px
			background url('../img/decor/yellow-star-lg.svg') 50% no-repeat / contain
			position absolute
			bottom -100px
			left -100px
			
	&-link
		font-size 32px
		line-height 1
		a
			display inline-block
	
			&:hover
				color $accent-color
			

.phone-row
	max-width 1220px
	padding-left 140px