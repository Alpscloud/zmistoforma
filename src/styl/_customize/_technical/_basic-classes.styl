.disable-hover,
.disable-hover * 
	pointer-events none !important

.gutters
	padding $gutters
	
.gutter
	&-top
		padding-top $gutter-top
	&-bottom
		padding-bottom $gutter-bottom
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%

.sect-title
	font 40px $Black
	line-height 1
	margin-bottom 90px
	
.decor-title
	position relative
	width fit-content
	&:before
		pseudo()
		width 270px
		height 270px
		background url('../img/decor/sun.svg') 50% no-repeat / contain
		position absolute
		right -70px
		vertical-center()
		z-index -1
		
	&-blue
		&:before
			background-image url('../img/decor/snowflake.svg')
			width 176px
			height 176px
			right 0
	
.sect-subtitle
	font-size 24px
	line-height 1
	margin-top -60px
	margin-bottom 90px
	
.title
	font-family $Bold
	&-h1-size
		font-size 36px
		line-height 38px
	&-h2-size
		font-size 32px
		line-height 34px
	&-h3-size
		font-size 28px
		line-height 32px
		
.text-center
	text-align center
	
.text-left
	text-align left
	
.text-right
	text-align right
	
.basic-white-color
	color $basic-white-color

.basic-black-color
	color $basic-black-color
	
.light-text-color
	color $light-text-color
	
.dark-text-color
	color $dark-text-color
	
.accent-color
	color $accent-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	
.bg
	bg(50%, 50%)
	
.bg-with-overlay
	position relative
	bg(50%, 50%)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($bg-overlay-color, $bg-overlay-opacity)
	.container
		position relative
		z-index 2
		
.color-bg
	background-color $color-bg
	
.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px
	z-index -999
	opacity 0
	visiiblity hidden
	
.thumbnail
	position relative
	overflow hidden
	width 100%
	padding-top 50%
	img
		display block
		position absolute
		position-center()
		width 100%
		height 100%
		object-fit cover
		
.block-text
	font-size 32px
	line-height 39px
	p
		margin-bottom 20px
		&:last-child
			margin-bottom 0
	

.content
	*
		&:last-child
			margin-bottom 0
			
	h2,h3,h3,h4,h5,h6
		line-height 1
		font-family $Black
		

		
	img
		display block
		margin 30px auto
		max-width 100%
		width auto
		
		

	ul, ol
		margin-bottom 30px
		li
			display block
			position relative
			margin-bottom 15px
			
			&:last-child
				margin-bottom 0
				
	ul
		li
			&:before
				pseudo()
				width 5px
				height 5px
				border-radius 50%
				margin-right 6px
				background-color $accent-color
				vertical-align middle
				
	ol
		counter-reset list
		li
			&:before
				counter-increment list
				content counter(list) ". "
				display inline-block
				margin-right 4px
				font-family $SemiBold
				
	p
		margin-bottom 40px
		
	h2
		font 40px $Black
		margin-bottom 40px
		
	h3
		font 32px $Black
		margin-bottom 40px
		
	a
		color inherit
		border-bottom 1px solid $accent-color
		font-family $Italic
		&:hover
			border-color transparent
			color $accent-color
				