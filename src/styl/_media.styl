	// condition
	.sect__condition
		.sect-title
			margin-bottom 0
	.condition
		position relative
		padding-top 110px
		margin-top -32px
		.block-text
			max-width calc(100% - 200px)
			margin-right 0
			
		&-img
			position absolute
			top 0
			right -15px
			width 210px
			height 165px
			img
				width 100%
				height 100%
				object-fit cover
				
	.brief
		&-text
			width 100%
			min-height 230px
			flex-direction column
			&__content
				display flex
				width 100%
				flex 1
				flex-direction column
				justify-content space-between
		
		&-link
			font-size 24px
			a
				display block
				width fit-content
				&:before
