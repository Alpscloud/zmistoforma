+max-screen(1100px)
	.main
		padding-top 69px
		
	.header
		padding 10px 0
		&-divider
			display none
			

	.nav
		&-logo
			display block
			width fit-content
		&-wrapper
			
			position fixed
			height 100vh
			overflow-y auto
			z-index 15
			background-color $basic-white-color
			top 0
			left 0
			flex none
			margin 0
			width 100%
			padding 100px 20px
			
			transition all .35s ease-in-out
			opacity 0
			visibility hidden
			pointer-events none
			&.is-opened
				opacity 1
				visibility visible
				pointer-events auto
			
			.promo-round
				display block
				margin 100px auto 0
				
		ul
			display block
			a
				font 24px $Bold
			li
				display block
				margin-right 0
				margin-bottom 40px
				text-align center
				&:last-child
					margin-bottom 0
					

	// Promo
	.sect__promo
		padding-bottom 200px
	
	.promo-block
		padding 100px 0
		
		.promo-round
			width 160px
			height 160px
			
	.promo
		&-img
			
			left 90px
			top 40px
			
	.text-meaning
		&:before
			top -400px
		&__blocks
			margin-left -25px
			margin-right -25px
		&__block
			width 33.3333%
			padding-left 25px
			padding-right 25px
			font-size 20px
			br
				display none
				
		&__entering
			margin-bottom 80px
			svg
				width 170px
		&__title
			margin-right 20px
			font-size 22px
			max-width 600px
			

	.thesis
		max-width 100%
		font-size 26px
		&-img
			position relative
			top auto
			right auto
			width 75%
			margin-left -20px
			margin-top -110px
			

	.price-block
		width 50%
		> div
			z-index 2
			position relative
		&:nth-child(3n+3)
			width 100%
			
		&:nth-child(3)
			margin-top 25px
			> div
				position relative
		
				&:before
					pseudo()
					position absolute
					top -75px
					left -40px
					width 150px
					height 150px
					z-index -1
					background url('../img/decor/blue-star.svg') 50% no-repeat / contain
					pointer-events none
				
			
	.prices
		&:before
			display none
			

	// About
	.about
		flex-wrap wrap
		&-text
			margin-top 0
			flex none
			width 100%
			margin-top 30px
			
	.consultation-content
		padding-left 40px
		
	.block-text
		font-size 20px
		
	.consultation-entering 
		.block-text
			margin-right 40px
			br
				display none
			


	.phone-row
		padding-left 0
		
	.dialog-img
		left 25%



