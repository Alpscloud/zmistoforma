					height 5px
				
		&-img
			width 300px
			right -15px
			height 300px
			

	.dialog
		&-row
			flex-wrap wrap
			margin-bottom 30px
		&-link
			width 100%
			margin-bottom 30px
			&:last-child
				margin-bottom 0
				
		&-img
			left auto
			right 50px
			width 200px
			height 280px
			&:before
				left auto
				right -75px
				bottom -75px
				width 150px
				height 150px
				

	.footer
		padding-bottom 50px
			
			
	.phone-link
		width fit-content
		margin-right 0
		margin-left auto
		
			
		

